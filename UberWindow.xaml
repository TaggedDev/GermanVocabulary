<Window x:Class="WpfApp1.UberWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="Übersetzung" Height="550" Width="400" ResizeMode="NoResize">
    <Grid x:Name="Window" Margin="0,0,2,-1" Height="520" KeyDown="PressedBTN" KeyUp="ReleasedBTN">
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="#FF0E3D64" Offset="0"/>
                <GradientStop Color="#FF163C8D" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Rectangle Grid.ColumnSpan="3" Margin="27,10,32,62">
            <Rectangle.Fill>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FF174274" Offset="0"/>
                    <GradientStop Color="#FF0E438D" Offset="1"/>
                    <GradientStop Color="#FF1B4295" Offset="0.53"/>
                </LinearGradientBrush>
            </Rectangle.Fill>
        </Rectangle>
        <TextBox x:Name="userInput" Grid.ColumnSpan="3" Text="{Binding textFieldContent}" HorizontalAlignment="Left" Height="42" Margin="32,10,0,0" Grid.Row="1" TextWrapping="Wrap" VerticalAlignment="Top" Width="331"  FontFamily="Segoe UI Black" FontSize="30"/>
        <Label Content="Translate the word: word" HorizontalAlignment="Left" Margin="27,10,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.711,-0.038" Grid.ColumnSpan="3" Background="#00000000" Height="32" Width="331" FontSize="18" Foreground="White"/>
        <Button x:Name="btn_a_umlaut" Content="ä" HorizontalAlignment="Left" Margin="80,10,0,0" Grid.Row="2" VerticalAlignment="Top" Width="50" Height="30" Click="OnAUmlautClick"/>
        <Button x:Name="btn_o_umlaut" Content="ö" HorizontalAlignment="Left" Margin="70,10,0,0" Grid.Row="2" VerticalAlignment="Top" Width="50" Height="30" Grid.Column="1" Click="OnOUmlautClick"/>
        <Button x:Name="btn_u_umlaut" Content="ü" HorizontalAlignment="Left" Margin="10,10,0,0" Grid.Row="2" VerticalAlignment="Top" Width="50" Height="30" Grid.Column="1" Click="OnUUmlautClick"/>
        <Button x:Name="btn_escet" Content="ß" HorizontalAlignment="Left" Margin="0,10,0,0" Grid.Row="2" VerticalAlignment="Top" Width="50" Height="30" Grid.Column="2" Click="OnEscetClick"/>
        <Button Grid.ColumnSpan="3" Content="SUBMIT" HorizontalAlignment="Left" Margin="77,43,0,0" Grid.Row="3" VerticalAlignment="Top" Width="248" Height="51" FontSize="22" FontWeight="Bold" Background="White" Foreground="#FF92FF0F" BorderBrush="Black"/>
    </Grid>
</Window>
